---
import GradientText from "@components/ui/GradientText";
import { CONTENT } from "@constants/content";
import { TypeAnimation } from "react-type-animation";
import { Image } from "astro:assets";
import HeroLandscape from "@content/images/hero-landscape.svg";
import { cn } from "@utils/cn";
---

<section id="hero" class="relative h-svh">
    <div
        class="px-3 md:px-10 pt-16 h-full w-full flex flex-col justify-start items-start"
    >
        <h1 id="hero-hi" class="text-5xl text-star-dust-300 mb-2">Hi ğŸ‘‹ğŸ½</h1>

        <h2 class="text-5xl text-star-dust-300 mb-2">
            I'm <GradientText>Robin Dalmy</GradientText>
        </h2>
        <h2 class="text-2xl text-star-dust-600 my-0">
            I build things for Web and Mobile using{" "}
            <TypeAnimation
                className="text-amaranth-500 font-mono text-2xl"
                sequence={CONTENT.TYPE_ANIMATIONS.TECH_STACK_SEQ}
                repeat={Infinity}
                speed={20}
                client:load
            />
        </h2>
    </div>
    <Image
        class={cn("absolute bottom-0")}
        src={HeroLandscape}
        alt={"Hero Landscape"}
    />
</section>
